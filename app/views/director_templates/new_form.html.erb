<h1>
  Add a new director
</h1>

<hr>

<form action="/create_director" >
  <!-- Label and input for dob -->
  <div class="form-group">
    <label for="dob">
      Dob
    </label>

    <input type="text" id="dob" name="dob" class="form-control" placeholder="dob">
  </div>

  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" placeholder="name">
  </div>

  <!-- Label and input for bio -->
  <div class="form-group">
    <label for="bio">
      Bio
    </label>

    <textarea id="bio" name="bio" class="form-control" rows="3" placeholder="input bio"></textarea>
  </div>

  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="url">
      Image url
    </label>

    <input type="text" id="url" name="the_source" class="form-control" placeholder="image url">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create director
  </button>
</form>

<hr>

<a href="/directors">
  Go back
</a>
